{% extends '@PrestaShop/Admin/layout.html.twig' %}

{% block content %}
	<style>
		tbody tr {
			cursor: move;
		}
	</style>
	<div class="card">
		<div class="card-header">
			<div class="d-flex justify-content-between align-items-center">
				<h2 class="text-capitalize">Manager</h2>
				<a href="{{ path('mm_productselect_create') }}" class="btn btn-primary">Add New One</a>
			</div>
		</div>
		<div class="card-body">
			{% if selection is defined and selection is not empty %}
				<table class="table">
					<thead>
						<th>ID</th>
						<th>Id Category</th>
						<th>title</th>
						<th>Link</th>
						<th>Action</th>
					</thead>
					<tbody id="sortable">
						{% for item in selection %}
							<tr data-id="{{item.id}}">
								<td>{{ item.id }}</td>

								<td>{{ item.categoryId }}</td>
								{% if item.title is not empty %}
									<td>{{ item.title }}</td>
								{% else %}
									<td>Category Title</td>
								{% endif %}
								{% if item.link is empty %}
									<td>Category Link</td>
								{% else %}
									<td>{{ item.link }}</td>
								{% endif %}

								<td class="d-flex justify-content-center align-items-center h-full">
									<a href="{{ path('mm_productselect_edit',{'id':item.id}) }}" class="mr-2 ">
										<svg width="20px" height="20px" viewbox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
											<path d="M21.2799 6.40005L11.7399 15.94C10.7899 16.89 7.96987 17.33 7.33987 16.7C6.70987 16.07 7.13987 13.25 8.08987 12.3L17.6399 2.75002C17.8754 2.49308 18.1605 2.28654 18.4781 2.14284C18.7956 1.99914 19.139 1.92124 19.4875 1.9139C19.8359 1.90657 20.1823 1.96991 20.5056 2.10012C20.8289 2.23033 21.1225 2.42473 21.3686 2.67153C21.6147 2.91833 21.8083 3.21243 21.9376 3.53609C22.0669 3.85976 22.1294 4.20626 22.1211 4.55471C22.1128 4.90316 22.0339 5.24635 21.8894 5.5635C21.7448 5.88065 21.5375 6.16524 21.2799 6.40005V6.40005Z" stroke="#000000" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
											<path d="M11 4H6C4.93913 4 3.92178 4.42142 3.17163 5.17157C2.42149 5.92172 2 6.93913 2 8V18C2 19.0609 2.42149 20.0783 3.17163 20.8284C3.92178 21.5786 4.93913 22 6 22H17C19.21 22 20 20.2 20 18V13" stroke="#000000" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
										</svg>
									</a>

									<button onclick="updateFormAction('{{ path('mm_productselect_delete',{'id':item.id}) }}')" type="button" class="bg-transparent border-0" data-toggle="modal" data-target="#exampleModal">
										<svg width="20px" height="20px" viewbox="0 0 1024 1024" xmlns="http://www.w3.org/2000/svg">
											<path fill="red" d="M160 256H96a32 32 0 0 1 0-64h256V95.936a32 32 0 0 1 32-32h256a32 32 0 0 1 32 32V192h256a32 32 0 1 1 0 64h-64v672a32 32 0 0 1-32 32H192a32 32 0 0 1-32-32V256zm448-64v-64H416v64h192zM224 896h576V256H224v640zm192-128a32 32 0 0 1-32-32V416a32 32 0 0 1 64 0v320a32 32 0 0 1-32 32zm192 0a32 32 0 0 1-32-32V416a32 32 0 0 1 64 0v320a32 32 0 0 1-32 32z"/>
										</svg>
									</button>


								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			{% else %}
				<p>No Selection yet</p>
			{% endif %}
		</div>
		<!-- Modal -->
		<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
			<div class="modal-dialog" role="document">
				<div class="modal-content">
					<div class="modal-header">
						<h5 class="modal-title" id="exampleModalLabel">Delete Section</h5>
						<button type="button" class="close" data-dismiss="modal" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>
					<div class="modal-body">
						<p>
							Are You sure you want to delete it?
						</p>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-outline-secondary" data-dismiss="modal">
							Close
						</button>
						<form id="deleteProduct" method="POST" action="">
							<button class="btn btn-danger" type="submit">
								<svg width="20px" height="20px" viewbox="0 0 1024 1024" xmlns="http://www.w3.org/2000/svg"><path fill="white" d="M160 256H96a32 32 0 0 1 0-64h256V95.936a32 32 0 0 1 32-32h256a32 32 0 0 1 32 32V192h256a32 32 0 1 1 0 64h-64v672a32 32 0 0 1-32 32H192a32 32 0 0 1-32-32V256zm448-64v-64H416v64h192zM224 896h576V256H224v640zm192-128a32 32 0 0 1-32-32V416a32 32 0 0 1 64 0v320a32 32 0 0 1-32 32zm192 0a32 32 0 0 1-32-32V416a32 32 0 0 1 64 0v320a32 32 0 0 1-32 32z"/></svg>
								<span>Delete</span>
							</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
	{% block javascripts %}
		{{ parent() }}
		<script>
			function updateFormAction(url) {
console.log(url)
$('#deleteProduct').attr('action', url);
}
		</script>
		<script src="{{asset(('../modules/productselect/js/sortable-init.js'))}}"></script>

	{% endblock %}
{% endblock %}
