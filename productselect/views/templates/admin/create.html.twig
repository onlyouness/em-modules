{% extends '@PrestaShop/Admin/layout.html.twig' %}

{% block content %}
	<style>
		.chosen-container {
			width: 100% !important;
			max-width: 100% !important;
		}
	</style>
	<div class="card">
		<div class="card-header">
			<h3>Create/Edit</h3>
		</div>
		{{ form_start(form) }}
		<div class="card-body">
			{{ form_rest(form) }}
		</div>
		<div class="card-footer">
			<div class="d-flex justify-content-between align-items-center">
				<a class="btn btn-secondary" href="{{ path('mm_productselect_index' )}}">Cancel</a>
				<button type="submit" class="btn btn-primary">Save</button>
			</div>
		</div>
		{{ form_end(form, {'render_rest': false}) }}
	</div>
	{% block javascripts %}
		{{ parent() }}
	{% endblock %}

{% endblock %}
